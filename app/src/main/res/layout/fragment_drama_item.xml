<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:descendantFocusability="blocksDescendants"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="false"
        android:layout_toLeftOf="@+id/my_f_cp_ib_next"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:id="@+id/my_tv_drama"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="true"
            android:textColor="@color/my_text_word"
            android:textSize="13sp"
            android:textStyle="normal|bold"
            android:layout_toLeftOf="@+id/my_tv_smi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SMI"
            android:id="@+id/my_tv_smi"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:textColor="@color/my_text_mean"
            android:textSize="13dp"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_toLeftOf="@+id/my_tv_mp3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MP3"
            android:id="@+id/my_tv_mp3"
            android:layout_alignParentBottom="false"
            android:layout_alignParentEnd="false"
            android:textColor="@color/my_text_mean"
            android:textSize="13dp"
            android:layout_alignParentLeft="false"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp" />

    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/my_f_cp_ib_next"
        android:layout_alignParentStart="false"
        android:src="@mipmap/ic_navigate_next_black_24dp"
        android:layout_marginRight="5dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" />


</RelativeLayout>